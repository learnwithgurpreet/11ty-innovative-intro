<!-- Contact Section -->
<section id="contact" class="py-20 border-t border-border-light dark:border-border-dark text-center">
  <h2 class="text-3xl font-bold mb-4">{{ contact.title }}</h2>
  <p class="text-muted-foreground-light dark:text-muted-foreground-dark mb-8 mx-auto max-w-lg">
    {{ contact.subTitle }}
  </p>
  <div class="flex justify-center gap-6">
    {% for item in contact.social %}
      <a aria-label="{{ item.name }}" href="{{ item.url }}" rel="me" target="_blank" class="inline-flex w-12 h-12 justify-center items-center ml-2 rounded-full highlight text-muted-foreground-light dark:text-muted-foreground-dark hover:opacity-80 transition-opacity">
        {% if item.icon %}
          {{ item.icon | safe }}
        {% endif %}
      </a>
    {% endfor %}
  </div>
</section>