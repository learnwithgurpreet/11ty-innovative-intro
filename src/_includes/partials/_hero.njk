<!-- Hero Section -->
<section class="text-center py-20">
  <h1 class="text-5xl md:text-7xl font-bold mb-4">{{ author.name }}</h1>
  <p class="text-lg text-muted-foreground-light dark:text-muted-foreground-dark mx-auto max-w-xl mb-8">{{ author.intro }}</p>
  <div class="flex flex-col sm:flex-row justify-center gap-4">
    <a href="{{ dictionary.hero.primaryCta.url }}" class="inline-flex items-center justify-center rounded-md bg-primary-light text-primary-foreground-light
                                                dark:bg-primary-dark dark:text-primary-foreground-dark px-6 py-3 text-sm font-medium shadow transition-colors
                                                hover:opacity-90 focus:outline-hidden focus:ring-2 focus:ring-ring focus:ring-offset-2">
      {{ dictionary.hero.primaryCta.name }}</a>
    <a href="{{ dictionary.hero.secondaryCta.url }}" class="inline-flex items-center justify-center rounded-md border border-border-light dark:border-border-dark
                bg-transparent px-6 py-3 text-sm font-medium shadow-xs transition-colors hover:bg-accent-light dark:hover:bg-accent-dark
                hover:text-accent-foreground-light dark:hover:text-accent-foreground-dark focus:outline-hidden focus:ring-2
                focus:ring-ring focus:ring-offset-2">
      {{ dictionary.hero.secondaryCta.name }}</a>
  </div>
</section>